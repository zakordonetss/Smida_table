{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2018",
    "importHelpers": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
, "index.ts"  ]
}
